[Unit]
Description=Kamailio SIP Server
Documentation=man:kamailio(8) http://www.kamailio.org/
After=syslog.target network-online.target postgresql.service

[Service]
Type=forking
User=omnileads
Environment=SHM_SIZE=64
Environment=PKG_SIZE=8
ExecStartPre=/opt/omnileads/kamailio/sbin/kamailio -c
ExecStart=/opt/omnileads/kamailio/sbin/kamailio -m $SHM_SIZE -M $PKG_SIZE -P /opt/omnileads/kamailio/run/kamailio/kamailio.pid
ExecStopPost=/usr/bin/rm -f /opt/omnileads/kamailio/run/kamailio/kamailio.pid
PIDFile=/opt/omnileads/kamailio/run/kamailio/kamailio.pid
RuntimeDirectory=kamailio
RuntimeDirectoryMode=755
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
